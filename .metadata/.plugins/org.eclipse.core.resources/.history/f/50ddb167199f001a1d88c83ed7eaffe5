package com.poi.vo.member;

import java.time.LocalDateTime;

import lombok.Data;

@Data
public class MemberVO {
	
	private Long mno;
	private Long[] role;
	private String name, email, password,company,dept;
	private LocalDateTime regDate, modiDate;
	
	
	/**
	 * For Member UPDATE
	 * @param name
	 * @param email
	 * @param password
	 * @param role
	 */
	public MemberVO(Long mno, String name, String email, String password, Long[] role)
	{
		this.mno = mno;
		this.name = name;
		this.email = email;
		this.password = password;
		this.role = role;
	}
	
	/**
	 * For Member DELETE(basic UPDATE)
	 * @param name
	 * @param email
	 * @param password
	 * @param role
	 */
	public MemberVO(Long mno)
	{
		String del = "삭제되었습니다.";
		this.mno = mno;
		this.name = null;
		this.email = null;
		this.password = password;
		this.role = role;
		
	}
}
