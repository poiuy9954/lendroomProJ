	<insert id="insert" parameterType="com.poi.vo.member.RoleVO">
		insert into tbl_role (role_no, member_no)
		values
		<foreach collection="roleList" item="i" separator=",">
			(#{i},#{member_no})
		 </foreach>
	</insert>
	
	<update id="update" parameterType="com.poi.vo.member.RoleVO">
		update tbl_role set role_no = #{changeRole_no}
		where member_no = #{member_no}
		and role_no = #{role_no}
	</update>
	
	<delete id="delete" parameterType="com.poi.vo.member.RoleVO">
		delete from tbl_role 
		where member_no = #{member_no}
		<foreach collection="role_List"></foreach>
		and role_no = #{role_no}
	</delete>
	
	
	
	
	
