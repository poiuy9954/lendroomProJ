<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.poi.mapper.MeetingMapper">
		
		<insert id="insert" parameterType="com.poi.vo.meeting.MeetingVO">
			insert into tbl_meeting 
			(title, openMember, room, reservationStartDate, reservationEndDate)
			values 
			(#{title}, #{openMember},#{room},#{reservationStartDate},#{reservationEndDate})
		</insert>
		
		<select id="select" parameterType="Long" resultType="com.poi.vo.meeting.MeetingVO">
			select * from tbl_meeting where mtno = #{mtno}
		</select>
		
		<select id="getList" resultType="java.util.Map">
			select 
			me1.mtno, 
			me1.title, 
			m1.name"openMember", 
			r1.name "room", 
			em2.name "JoinMember", 
			me1.reservationStartDate, 
			me1.reservationEndDate, 
			me1.realStartDate, 
			me1.realEndDate, 
			me1.regDate, 
			me1.modiDate
			
			from tbl_meeting me1
			join tbl_member m1 
			on me1.openMember = m1.mno
			join (select m2.mno,m2.name,meeting_no from tbl_entryMember em1 
					join tbl_member m2 
					on em1.member_no = m2.mno) em2
			on me1.mtno = em2.meeting_no
			join tbl_room r1
			on r1.rno = me1.room
		</select>
		
		<update id="update" parameterType="com.poi.vo.meeting.MeetingVO">
			Update tbl_meeting set
			<if test="title!=null">
				title = #{title}, 
			</if> 
			<if test="openMember!=null">
			openMember = #{openMember}, 
			</if> 
	
			<if test="room!=null">
			room = #{room}, 
			</if> 
	
			<if test="reservationStartDate!=null">
			reservationStartDate = #{reservationStartDate}, 
			</if> 
	
			<if test="reservationEndDate!=null">
			reservationEndDate = #{reservationEndDate}, 
			</if> 
	
			<if test="realStartDate!=null">
			realStartDate = #{realStartDate}, 
			</if> 
	
			<if test="realEndDate!=null">
			realEndDate = #{realEndDate},
			</if> 
			modiDate = now()
			where mtno = #{mtno}
		</update>
		
	<delete id="delete" parameterType="Long">
		delete from tbl_meeting where mtno = #{mtno}
	</delete>
		
</mapper>